{
  "name": "emerald-timer",
  "version": "1.2.0",
  "type": "module",
  "description": "Visual Time Tracker & Life Journal",
  "main": "main.cjs",
  "author": {
    "name": "Emerald Team",
    "email": "emerald@example.com"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "lucide-react": "^0.436.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7"
  },
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build && electron-builder --win",
    "build:portable": "vite build && electron-builder --win portable",
    "build:linux-arm": "vite build && electron-builder --linux --arm64"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.24",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "vite": "^5.4.2"
  },
  "build": {
    "appId": "com.emerald.timer",
    "productName": "Emerald Timer",
    "copyright": "Copyright Â© 2024 Emerald",
    "directories": {
      "output": "release-builds"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "https://cdn-icons-png.flaticon.com/512/3569/3569974.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Emerald Timer"
    }
  }
}
